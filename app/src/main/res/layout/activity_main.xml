<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- display -->
    <TextView
        android:id="@+id/displayTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00"
        android:gravity="end"
        android:padding="50dp"
        android:layout_alignParentTop="true"/>
    !-- igual -->
    <TextView
            android:id="@+id/igualTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/plusTXT"/>
    <!-- one -->
    <TextView
        android:id="@+id/oneTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:padding="40dp"
        android:layout_below="@id/fourTXT"/>
    <!-- two -->
    <TextView
        android:id="@+id/twoTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textStyle="bold"
        android:padding="40dp"
        android:layout_below="@id/fiveTXT"
        android:layout_toRightOf="@id/oneTXT"/>
    <!-- three -->
    <TextView
        android:id="@+id/threeTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textStyle="bold"
        android:padding="40dp"
        android:layout_below="@id/sixTXT"
        android:layout_toRightOf="@id/twoTXT"/>

    <!-- plus -->
    <TextView
            android:id="@+id/plusTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/minusTXT"
            android:layout_toRightOf="@id/threeTXT"/>

    <!-- four -->
    <TextView
            android:id="@+id/fourTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/sevenTXT"/>
    <!-- five -->
    <TextView
            android:id="@+id/fiveTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/eightTXT"
            android:layout_toRightOf="@id/fourTXT"/>
    <!-- six -->
    <TextView
            android:id="@+id/sixTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/nineTXT"
            android:layout_toRightOf="@id/fiveTXT"/>
    <!-- minus -->
    <TextView
            android:id="@+id/minusTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/timesTXT"
            android:layout_toRightOf="@id/sixTXT"/>
    <!-- seven -->
    <TextView
            android:id="@+id/sevenTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/displayTXT"/>
    <!-- eight -->
    <TextView
            android:id="@+id/eightTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/displayTXT"
            android:layout_toRightOf="@id/sevenTXT"/>
    <!-- nine -->
    <TextView
            android:id="@+id/nineTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/displayTXT"
            android:layout_toRightOf="@id/eightTXT"/>
    <!-- times -->
    <TextView
            android:id="@+id/timesTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textStyle="bold"
            android:padding="40dp"
            android:layout_below="@id/displayTXT"
            android:layout_toRightOf="@id/nineTXT"/>

</RelativeLayout>